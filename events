  <header>
    <img
      src="https://www.nexthome.com/wp-content/uploads/2021/05/NH-Logo-Orange-Transparent.png"
      alt="NextHome In The Bluffs logo"
    />
    <h1>Council Bluffs Community Events</h1>
    <p>Updated Daily • From City of Council Bluffs + UnleashCB</p>
  </header>

  <div class="page-wrap">
    <div class="filters">
      <h2>Events Calendar</h2>
      <select id="sourceFilter">
        <option value="all">All Sources</option>
        <option value="City of Council Bluffs">City of Council Bluffs</option>
        <option value="UnleashCB">UnleashCB</option>
      </select>
    </div>

    <div id="eventsGrid" class="grid"></div>
    <div id="emptyMessage" class="empty" style="display: none">
      No events found for this filter.
    </div>
  </div>

  <script>
    const grid = document.getElementById("eventsGrid");
    const sourceFilter = document.getElementById("sourceFilter");
    const emptyMessage = document.getElementById("emptyMessage");

    async function loadEvents() {
      grid.innerHTML = "<p class='empty'>Loading events…</p>";
      emptyMessage.style.display = "none";

      try {
        const res = await fetch("/.netlify/functions/events");
        if (!res.ok) throw new Error("Bad response");
        const events = await res.json();
        window.__ALL_EVENTS = events;
        renderEvents();
      } catch (err) {
        grid.innerHTML =
          "<p class='empty'>Unable to load events right now.</p>";
      }
    }

    function renderEvents() {
      const events = window.__ALL_EVENTS || [];
      const selected = sourceFilter.value;

      const filtered = events.filter((e) => {
        if (selected === "all") return true;
        return e.source === selected;
      });

      grid.innerHTML = "";

      if (!filtered.length) {
        emptyMessage.style.display = "block";
        return;
      } else {
        emptyMessage.style.display = "none";
      }

      filtered.forEach((e) => {
        const card = document.createElement("div");
        card.className = "flip-card";
        card.innerHTML = `
          <div class="flip-card-inner">
            <div class="flip-face flip-front">
              <img src="${e.image}" alt="${escapeHtml(e.title)}" />
              <div class="content">
                <h3>${escapeHtml(e.title)}</h3>
                <div class="meta">
                  ${
                    e.date
                      ? `<div><strong>Date:</strong> ${escapeHtml(e.date)}</div>`
                      : ""
                  }
                  ${
                    e.location
                      ? `<div><strong>Location:</strong> ${escapeHtml(
                          e.location
                        )}</div>`
                      : ""
                  }
                  <span class="source-pill">${escapeHtml(
                    e.source || "Community"
                  )}</span>
                </div>
              </div>
            </div>

            <div class="flip-face flip-back">
              <div class="content">
                <h3>${escapeHtml(e.title)}</h3>
                <p>${
                  e.description
                    ? escapeHtml(e.description)
                    : "Click below for full event details."
                }</p>
                ${
                  e.link
                    ? `<a class="button" href="${e.link}" target="_blank">View Details</a>`
                    : ""
                }
              </div
